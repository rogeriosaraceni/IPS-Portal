---
const boxes = [
    {
        link: "https://ips-pillar-assessments.vercel.app/",
        icon: "bi bi-clipboard2-check",
        name: "Pillar Assessments",
        text: "Complete the assessment in the Checklist.",
    },
    {
        link: "#",
        icon: "bi bi-trophy",
        name: "BOPs",
        text: "View and submit your best practice here!",
    },
]
---

<section class="card-systems animate__animated animate__bounceInLeft">
    {
        boxes.map(box => (
            <a class="card shadow" href={box.link}>
                <div class="card-body">
                    <article class="content-card">
                        <div class="content-icon-name">
                            <i class={`icon-boxed ${box.icon}`}></i>
                            <h3 class="card-title mb-0">{box.name}</h3>
                        </div>

                        <p class="mb-0">{box.text}</p>
                    </article>
                </div>
            </a>
        ))
    }
</section>

<style>
    .card-systems{
        display: flex;
        gap: 1.5rem;
        flex-direction: column;
    }
    .card-systems .card {
        text-decoration: none;
        border: 1px solid #dfdfdf;
        border-radius: 0.3rem;
        transition: all 0.2s;
    }
    .card-systems .card:hover{
        background-color: #e3eed6;
    }

    .card-systems .content-card{
        display: flex;
        flex-direction: column;
    }

    .content-icon-name{
        display: flex;
        align-items: center;
        gap: 1rem;
    }

    .card-systems .card .icon-boxed {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        vertical-align: top;
        width: 2rem;
        height: 2rem;
        color: #fff;
        font-size: 1rem;
        border-radius: 50%;
        background: #6cb33f;
    }
</style>
